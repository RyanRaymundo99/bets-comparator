generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @map("_id")
  name           String
  email          String         @unique
  cpf            String?        @unique
  phone          String?        @unique
  password       String?        // Add password field directly to User
  emailVerified  Boolean        @default(false)
  phoneVerified  Boolean        @default(false)
  approvalStatus ApprovalStatus @default(PENDING)
  image          String?
  kycStatus      KYCStatus      @default(PENDING)
  kycData        Json?
  // 2FA fields
  twoFactorEnabled    Boolean @default(false)
  twoFactorSecret     String?
  twoFactorBackupCodes String[] @default([])
  createdAt      DateTime
  updatedAt      DateTime
  accounts       Account[]
  balances       Balance[]
  deposits       Deposit[]
  orders         Order[]
  p2pOffers      P2POffer[]
  buyerTrades    P2PTrade[]     @relation("BuyerTrades")
  sellerTrades   P2PTrade[]     @relation("SellerTrades")
  sessions       Session[]
  transactions   Transaction[]
  withdrawals    Withdrawal[]

  @@map("user")
}

model Session {
  id        String   @id @map("_id")
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @map("_id")
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String          @id @map("_id")
  identifier String          // email or phone number
  value      String          // verification code (4 digits)
  type       VerificationType // EMAIL, PHONE, PASSWORD_RESET
  purpose    String?         // Additional context like "signup", "password_reset"
  attempts   Int             @default(0)
  maxAttempts Int            @default(3)
  expiresAt  DateTime
  createdAt  DateTime?       @default(now())
  updatedAt  DateTime?       @updatedAt

  @@map("verification")
}

enum VerificationType {
  EMAIL
  PHONE
  PASSWORD_RESET
}

model Balance {
  id        String   @id @default(cuid())
  userId    String
  currency  String
  amount    Decimal  @db.Decimal(20, 8)
  locked    Decimal  @default(0) @db.Decimal(20, 8)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, currency])
  @@map("balance")
}

model Deposit {
  id            String        @id @default(cuid())
  userId        String
  amount        Decimal       @db.Decimal(20, 2)
  currency      String        @default("BRL")
  status        DepositStatus @default(PENDING)
  paymentMethod String
  externalId    String?
  proofUrl      String?
  confirmedAt   DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  transactionId String?       @unique
  transaction   Transaction?  @relation(fields: [transactionId], references: [id])
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Mercado Pago integration fields
  paymentId     String?       // Mercado Pago payment ID
  paymentStatus String?       // Mercado Pago payment status
  paymentAmount Decimal?      @db.Decimal(20, 2) // Actual amount paid
  fee           Decimal?      @db.Decimal(20, 2) // Processing fee charged
  pixQrCode    String?       // PIX QR code data
  pixQrCodeBase64 String?    // PIX QR code image in base64

  @@map("deposit")
}

model Withdrawal {
  id            String           @id @default(cuid())
  userId        String
  amount        Decimal          @db.Decimal(20, 2)
  currency      String           @default("BRL")
  status        WithdrawalStatus @default(PENDING)
  paymentMethod String
  externalId    String?
  bankAccount   Json?
  processedAt   DateTime?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  transactionId String?          @unique
  transaction   Transaction?     @relation(fields: [transactionId], references: [id])
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("withdrawal")
}

model Order {
  id              String       @id @default(cuid())
  userId          String
  type            OrderType
  baseCurrency    String
  quoteCurrency   String
  amount          Decimal      @db.Decimal(20, 8)
  price           Decimal      @db.Decimal(20, 2)
  total           Decimal      @db.Decimal(20, 2)
  status          OrderStatus  @default(PENDING)
  externalOrderId String?
  executedAt      DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  transactionId   String?      @unique
  transaction     Transaction? @relation(fields: [transactionId], references: [id])
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("order")
}

model P2POffer {
  id             String      @id @default(cuid())
  userId         String
  type           OfferType
  cryptoCurrency String
  fiatCurrency   String      @default("BRL")
  cryptoAmount   Decimal     @db.Decimal(20, 8)
  fiatAmount     Decimal     @db.Decimal(20, 2)
  price          Decimal     @db.Decimal(20, 2)
  status         OfferStatus @default(ACTIVE)
  paymentMethods Json
  minTrade       Decimal     @db.Decimal(20, 2)
  maxTrade       Decimal     @db.Decimal(20, 2)
  expiresAt      DateTime?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  trades         P2PTrade[]

  @@map("p2p_offer")
}

model P2PTrade {
  id                  String       @id @default(cuid())
  offerId             String
  buyerId             String
  sellerId            String
  cryptoAmount        Decimal      @db.Decimal(20, 8)
  fiatAmount          Decimal      @db.Decimal(20, 2)
  status              TradeStatus  @default(PENDING)
  paymentProof        String?
  cryptoReleased      Boolean      @default(false)
  fiatConfirmed       Boolean      @default(false)
  disputeReason       String?
  expiresAt           DateTime
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  buyerTransactionId  String?      @unique
  sellerTransactionId String?      @unique
  buyer               User         @relation("BuyerTrades", fields: [buyerId], references: [id])
  buyerTransaction    Transaction? @relation("BuyerTransaction", fields: [buyerTransactionId], references: [id])
  offer               P2POffer     @relation(fields: [offerId], references: [id], onDelete: Cascade)
  seller              User         @relation("SellerTrades", fields: [sellerId], references: [id])
  sellerTransaction   Transaction? @relation("SellerTransaction", fields: [sellerTransactionId], references: [id])

  @@map("p2p_trade")
}

model Transaction {
  id          String          @id @default(cuid())
  userId      String
  type        TransactionType
  amount      Decimal         @db.Decimal(20, 8)
  currency    String
  balance     Decimal         @db.Decimal(20, 8)
  description String
  metadata    Json?
  createdAt   DateTime        @default(now())
  deposit     Deposit?
  order       Order?
  buyerTrade  P2PTrade?       @relation("BuyerTransaction")
  sellerTrade P2PTrade?       @relation("SellerTransaction")
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  withdrawal  Withdrawal?

  @@map("transaction")
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum KYCStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DepositStatus {
  PENDING
  CONFIRMED
  REJECTED
  CANCELLED
}

enum WithdrawalStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum OrderType {
  BUY
  SELL
}

enum OrderStatus {
  PENDING
  EXECUTING
  COMPLETED
  FAILED
  CANCELLED
}

enum OfferType {
  BUY
  SELL
}

enum OfferStatus {
  ACTIVE
  PAUSED
  CANCELLED
  EXPIRED
}

enum TradeStatus {
  PENDING
  PAYMENT_SENT
  PAYMENT_CONFIRMED
  CRYPTO_RELEASED
  COMPLETED
  DISPUTED
  CANCELLED
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  BUY_CRYPTO
  SELL_CRYPTO
  P2P_TRADE
  FEE
  REFUND
}
