# ===========================================
# BS MARKET - ENVIRONMENT VARIABLES TEMPLATE
# ===========================================
# Copy this file to .env.local for development
# Set these variables in Vercel Dashboard for production

# ===========================================
# REQUIRED VARIABLES (Must be set)
# ===========================================

# Database (Required for Vercel)
# Get from Neon, Supabase, or other PostgreSQL provider
DATABASE_URL="postgresql://username:password@host:port/database"

# Better Auth Configuration (Required)
# Generate a secure 32+ character secret
BETTER_AUTH_SECRET="your-better-auth-secret-key-minimum-32-characters"
BETTER_AUTH_URL="https://your-domain.vercel.app"

# Next.js Configuration
NEXT_PUBLIC_BASE_URL="https://your-domain.vercel.app"

# ===========================================
# PAYMENT INTEGRATION
# ===========================================

# Mercado Pago API (for real PIX payments)
# Get from: https://www.mercadopago.com.br/developers
MERCADO_PAGO_ACCESS_TOKEN="APP_USR-your-mercado-pago-access-token"
MERCADO_PAGO_PUBLIC_KEY="your-mercado-pago-public-key"
MERCADO_PAGO_PIX_KEY="your-mercado-pago-pix-key"

# Demo Mode (set to false when using real Mercado Pago)
DEMO_MODE=false

# ===========================================
# CRYPTO TRADING
# ===========================================

# Binance API (for crypto trading)
# Get from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY="your-binance-api-key"
BINANCE_SECRET_KEY="your-binance-secret-key"
BINANCE_TESTNET="false" # Set to "true" for testing, "false" for production

# ===========================================
# COMMUNICATION SERVICES
# ===========================================

# Email Configuration (Production recommended: Resend)
# Get from: https://resend.com
RESEND_API_KEY="re_your-resend-api-key"
FROM_EMAIL="noreply@your-domain.com"

# Alternative: Gmail SMTP (for development only)
# EMAIL_SERVER_USER="your-email@gmail.com"
# EMAIL_SERVER_PASSWORD="your-app-password"

# SMS Configuration (TextBelt - FREE)
# Get from: https://textbelt.com for higher limits
TEXTBELT_API_KEY="textbelt"

# ===========================================
# PRODUCTION SETTINGS
# ===========================================

# Environment
NODE_ENV="production"

# Vercel Specific (auto-set by Vercel)
VERCEL_URL="your-domain.vercel.app"
VERCEL_ENV="production"

# ===========================================
# OPTIONAL CONFIGURATIONS
# ===========================================

# Admin Configuration (for first admin user)
ADMIN_EMAIL="admin@your-domain.com"
ADMIN_PASSWORD="secure-admin-password"

# Security
# Generate with: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-key"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000" # 15 minutes in milliseconds

# File Upload
MAX_FILE_SIZE="10485760" # 10MB in bytes
UPLOAD_DIR="public/uploads"

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Vercel Analytics (optional)
# VERCEL_ANALYTICS_ID="your-analytics-id"

# Error Tracking (optional)
# SENTRY_DSN="your-sentry-dsn"

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Uncomment for local development
# NEXT_PUBLIC_DEV_MODE="true"
# DEBUG="bs-market:*"